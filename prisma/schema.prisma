generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  password String
  username String
}

model income {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  date     String
  price    Float
  quantity Float
  unit     String
  total    Float
  report   report? @relation(fields: [reportId], references: [id])
  reportId String? @db.ObjectId
}

model outcome {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  date     String
  price    Float
  quantity Float
  unit     String
  total    Float
  report   report? @relation(fields: [reportId], references: [id])
  reportId String? @db.ObjectId
}

model report {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  incomes  income[]
  outcomes outcome[]
}
